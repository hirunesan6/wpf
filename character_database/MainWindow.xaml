<Window x:Class="character_database.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:character_database"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- キャラクター名の入力 -->
            <TextBlock Text="キャラクター名:" />
            <TextBox x:Name="characterNameTextBox" Width="200" />

            <!-- キャラクターHPの入力 -->
            <TextBlock Text="HP:" />
            <TextBox x:Name="characterHPTextBox" Width="200" />

            <!-- キャラクターデータ追加ボタン -->
            <Button Content="キャラクターを追加" Width="200" Click="AddCharacter_Click" />

            <!-- キャラクターリストを表示するリストボックス -->
            <ListBox x:Name="characterListBox" Width="300" Height="200" />

        </StackPanel>


    </Grid>
</Window>
